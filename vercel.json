{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "build/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "build/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "build/manifest.json"
    },
    {
      "src": "/(.*)\\.(.+)",
      "dest": "build/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "build/index.html"
    }
  ]
} 